<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.tuckmn1.complexcontrols.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:id="@+id/separator"
        android:background="@color/separatorColour"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="124dp" />

    <Button
        android:text="Enroll Now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/btnEnroll" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enroll for Music Lessions"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:longClickable="false"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        tools:layout_height="150px"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="Guitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnGuitar"
            android:layout_weight="1" />

        <RadioButton
            android:text="Recorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnRecorder"
            android:layout_weight="1" />

        <RadioButton
            android:text="Drums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnDrums"
            android:layout_weight="1" />
    </RadioGroup>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:id="@+id/imageView"
        android:layout_marginTop="42dp"
        android:background="@color/separatorColour"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When do you want to start?"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/txtMonthPrompt"
        android:clickable="false"
        android:longClickable="false"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monthsSpinner"
        android:layout_below="@+id/txtMonthPrompt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:textAlignment="center"
        android:background="@color/spinnerBlue"
            />
</RelativeLayout>

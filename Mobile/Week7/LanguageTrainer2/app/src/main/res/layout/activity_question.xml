<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bit.tuckmn1.languagetrainer.QuestionActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="Question X"
        android:id="@+id/questionNumberTextView"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:layout_constraintLeft_creator="1"/>

    <ImageView
        android:id="@+id/imgNoun"
        android:layout_width="0dp"
        android:layout_height="221dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/questionNumberTextView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <RadioGroup
        android:layout_width="131dp"
        android:layout_height="111dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imgNoun"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_creator="20"
        android:id="@+id/radioGroup"
        app:layout_constraintLeft_toLeftOf="@+id/imgNoun">

        <RadioButton
            android:id="@+id/Die"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Die"/>

        <RadioButton
            android:id="@+id/Der"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Der"/>

        <RadioButton
            android:id="@+id/Das"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Das"/>

    </RadioGroup>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Check Answer"
        android:textSize="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/answerTextView"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:text=""
        android:textSize="30dp"
        android:textAlignment="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroup"
        android:layout_marginEnd="27dp"
        app:layout_constraintRight_toRightOf="@+id/btnSubmit"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/radioGroup"
        app:layout_constraintLeft_toRightOf="@+id/radioGroup"/>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.tuckmn1.sharedpreferences.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Choose A Language"
        android:id="@+id/appTitle"
        android:textSize="25dp"
        />

    <RadioGroup
        android:id="@+id/languageGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/appTitle"
        android:layout_alignEnd="@+id/appTitle"
        android:layout_marginEnd="88dp">

        <RadioButton
            android:text="English"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EnglishRadio"
            android:layout_weight="1" />

        <RadioButton
            android:text="German"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GermanRadio"
            android:layout_weight="1" />

        <RadioButton
            android:text="Spanish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SpanishRadio"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Please Choose A Colour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appColour"
        android:layout_below="@+id/languageGroup"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_alignEnd="@+id/appTitle"
        android:textSize="25dp"/>

    <RadioGroup
        android:id="@+id/colourGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appColour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp">

        <RadioButton
            android:text="Red"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RedRadio"
            android:layout_weight="1" />

        <RadioButton
            android:text="Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GreenRadio"
            android:layout_weight="1" />

        <RadioButton
            android:text="Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BlueRadio"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:text="Set Preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/btnPrefs"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

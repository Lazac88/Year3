@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/StyleSheets/QuizStyle.css" rel="stylesheet" />
    <title>Register</title>
</head>
<body>
    <div class="container">
        <div class="quizHead">
            <h1 class="title">QUIZ TIME</h1>
        </div>
        <div class="centerDiv">
            <h2 class="centerTitle">RegisterUser</h2>
            <fieldset>
                <legend>Register New User</legend>
                <form action="RegisterUser" method="post">
                    <label class="editor-label">Name:</label><br />
                    <input class="editor-field" type="text" name="username" />
                    <br />
                    <label class="editor-label">Password:</label><br />
                    <input class="editor-field" type="password" name="pass1" />
                    <br />
                    <label class="editor-label">Repeat Password:</label><br />
                    <input class="editor-field" type="password" name="pass2" />
                    <br />
                    <br />
                    <input class="btnLogin" type="submit" value="Register" />
                </form>
            </fieldset>
            <p>@ViewBag.Error</p>
        </div>
    </div>
    

    
</body>
</html>

    

